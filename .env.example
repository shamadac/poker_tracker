# Professional Poker Analyzer Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/poker_analyzer
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=poker_analyzer
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Security Configuration
SECRET_KEY=your-super-secret-key-here-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Professional Poker Analyzer
VERSION=0.1.0
DESCRIPTION=Advanced poker hand analysis and statistics platform

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","https://localhost:3000"]

# Environment Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# AI Provider Configuration (User-specific, stored in database)
# These are examples - actual keys are stored per-user in the database
# GEMINI_API_KEY=your-gemini-api-key-here
# GROQ_API_KEY=your-groq-api-key-here